<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.vaddya.schedule.desktop.controllers.TasksController">
    <children>
        <ListView fx:id="taskList" layoutX="82.0" layoutY="95.0" prefHeight="200.0"
                  prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="80.0"/>
        <HBox spacing="20.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Button fx:id="addTaskButton" mnemonicParsing="false"
                        onAction="#actionButtonPressed" prefWidth="200.0" text="%task_add"/>
                <Button fx:id="editTaskButton" mnemonicParsing="false"
                        onAction="#actionButtonPressed" prefWidth="200.0" text="%task_edit"/>
                <Button fx:id="removeTaskButton" layoutX="230.0" layoutY="10.0"
                        mnemonicParsing="false" onAction="#actionButtonPressed"
                        prefWidth="200.0" text="%task_remove"/>
            </children>
        </HBox>
        <Label fx:id="tasksCountLabel" layoutX="58.0" layoutY="29.0" text="Всего заданий: 0"
               AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="5.0">
        </Label>
    </children>
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
</AnchorPane>