                              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                              AnchorPane.topAnchor="0.0">
                            <children>
                                <RadioButton fx:id="once" layoutX="113.0" layoutY="9.0" mnemonicParsing="false"
                                             text="%lesson_once">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="group"/>
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton fx:id="always" layoutX="157.0" layoutY="9.0" mnemonicParsing="false"
                                             text="%lesson_always" toggleGroup="$group"/>
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                    </VBox.margin>
                </AnchorPane>
                <BorderPane>
                    <left>
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#actionSave" prefWidth="160.0"
                                text="%save" BorderPane.alignment="CENTER"/>
                    </left>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
                    </padding>
                    <right>
                        <Button cancelButton="true" mnemonicParsing="false" onAction="#actionClose" prefWidth="160.0"
                                text="%cancel" BorderPane.alignment="CENTER"/>
                    </right>
                </BorderPane>
            </children>
        </VBox>
    </top>
