                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                    </VBox.margin>
                </AnchorPane>
                <AnchorPane>
                    <children>
                        <Label text="%lesson_subject" textAlignment="RIGHT" AnchorPane.leftAnchor="0.0"
                               AnchorPane.rightAnchor="210.0" AnchorPane.topAnchor="5.0">
                        </Label>
                        <TextField fx:id="subjectField" layoutX="71.0" prefWidth="200.0" AnchorPane.rightAnchor="0.0">
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                    </VBox.margin>
                </AnchorPane>
                <AnchorPane>
                    <children>
                        <ChoiceBox fx:id="typeChoiceBox" layoutX="43.0" prefWidth="200.0" AnchorPane.rightAnchor="0.0">
