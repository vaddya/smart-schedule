                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                    </VBox.margin>
                </AnchorPane>
                <AnchorPane>
                    <children>
                        <Label text="%lesson_place" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="210.0"
                               AnchorPane.topAnchor="5.0"/>
                        <TextField fx:id="placeField" prefWidth="200.0" AnchorPane.rightAnchor="0.0"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
